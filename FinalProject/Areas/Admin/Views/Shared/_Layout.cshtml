<!DOCTYPE html>
<html>
<head>
    <title>Admin</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Assets/css/Admin.css">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet"
          type="text/css"
          href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
</head>
<body>
    <div class="main">
        <div class="sidebar">
            <div class="logo"><a href="@Url.Action("Index","Home")"><img src="~/Areas/Admin/Assets/imgnew/logo-dmcl.png"></a></div>
            <div class="menu_sidebar">
                <nav class="animated bounceInDown bg-dark" style="width: 320px">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")" style=" background-color: #f5f536; color: #1163ac; font-size: 25px;font-weight: bold;"><i class="fas fa-home"></i> Bảng điều khiển</a></li>
                        <li class="sub-menu">
                            <a href="#settings"><i class="fas fa-chart-pie"></i> Quản lý danh mục<div class="fa fa-caret-down right"></div></a>
                            <ul>
                                <li><a href="@Url.Action("Index", "DanhMucSPs")">Xem danh mục</a></li>
                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="#message"><i class="fas fa-archive"></i> Quản lý sản phẩm<div class="fa fa-caret-down right"></div></a>
                            <ul>
                                <li><a href="@Url.Action("Index","SanPhams")">Xem sản phẩm</a></li>

                            </ul>
                        </li>
                        <li><a href="@Url.Action("Index","DonHangs")"><i class="fas fa-shopping-cart"></i> Quản lý đơn hàng</a></li>
                        <li><a href="@Url.Action("Index","TaiKhoans")"><i class="fas fa-user"></i> Quản lý tài khoản</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="content">
            <div class="header">
                <div class="form_search">
                    <form method="GET" action="">
                        <input type="text" name="keywrod" placeholder="Nhập từ khóa...">
                        <button type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <div class="account_manage">
                    <button class="btn_account" style="border-radius: 20px;background: #f5f536;">
                        <img src="~/Areas/Admin/Assets/imgnew/Aavata.png"> Admin
                        <i class="fas fa-angle-down"></i>
                        <div class="sub_menu" id="submenu_account">
                            <ul>
                                <li>
                                    <a href="#">
                                        Profile
                                        <i class="fas fa-user"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Reset password
                                        <i class="fas fa-key"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        Setting
                                        <i class="fas fa-cog"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Login","Home")">
                                        Logout
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </button>
                </div>
            </div>
            @RenderBody()
        </div>

    </div>

    <div>
        <div class="footer_content_copyright">
            <div>
                <p>Copyright Nhóm 9, CNTT03 - K13</p>
            </div>
        </div>
    </div>

    <script>
        $('.sub-menu ul').hide();
        $(".sub-menu a").click(function () {
            $(this).parent(".sub-menu").children("ul").slideToggle("100");
            $(this).find(".right").toggleClass("fa-caret-up fa-caret-down");
        });
    </script>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
<script type="text/javascript" src="~/Areas/Admin/Assets/js/Admin.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>