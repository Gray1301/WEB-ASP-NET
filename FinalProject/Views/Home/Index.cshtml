@model IEnumerable<FinalProject.Models.SanPham>
@{
    ViewBag.Title = "Trang chu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Decimal a, b;
    string gb, gh;
}
<div class="body">
    <div class="banner">
        <div id="carouselExampleControls"
             class="carousel slide"
             data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/wwwroot/frontend/images/banner.png"
                         class="d-block w-100"
                         alt="..."
                         height="auto" />
                </div>
                <div class="carousel-item">
                    <img src="~/wwwroot/frontend/images/banner2.png"
                         class="d-block w-100"
                         alt="..."
                         height="auto" />
                </div>
                <div class="carousel-item">
                    <img src="~/wwwroot/frontend/images/banner3.png"
                         class="d-block w-100"
                         alt="..."
                         height="auto" />
                </div>
                <div class="carousel-item">
                    <img src="~/wwwroot/frontend/images/banner4.png"
                         class="d-block w-100"
                         alt="..."
                         height="auto" />
                </div>
                <div class="carousel-item">
                    <img src="~/wwwroot/frontend/images/banner5.png"
                         class="d-block w-100"
                         alt="..."
                         height="auto" />
                </div>
            </div>
            <button class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="banner-option">
            <i class="far fa-thumbs-up"><span>Chính hãng 100%</span></i>
            <i class="fas fa-truck"><span>Giao hàng tận nơi</span></i>
            <i class="fab fa-amazon-pay"><span>Thanh toán nhanh chóng</span></i>
            <i class="fas fa-phone"><span>Đặt hàng trực tuyến</span></i>
        </div>
        <div class="three-banner" style="margin: 15px 0px">
            <a href="#" style="margin-right: 55px">
                <img src="~/wwwroot/frontend/images/g_48.png" alt="" />
            </a>
            <a href="#" style="margin-right: 55px">
                <img src="~/wwwroot/frontend/images/_47.png" alt="" />
            </a>
            <a href="#">
                <img src="~/wwwroot/frontend/images/_39.png" alt="" />
            </a>
        </div>
    </div>

</div>

<div class="news">
    <div class="new-title">
        <a href="../layouts/DanhMucSP.html">
            <span style="color: #8a9696"></span><span style="color: #5353c5">
                SMART TIVI <i class="fas fa-tv"></i>
            </span>
        </a>
    </div>
    <div class="row">
        <!-- <h2>Smart Tivi </h2> -->

        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-6 col-sm-6 mb-3" style="align-content:center">
                <div class="card" style="align-content:center;height:450px;position:relative">

                    @{
                        string ImagePath = "~/wwwroot/frontend/images/" + item.Anh;
                    }
                    <img src="@Url.Content(ImagePath)" alt="" width="250" height="250" />

                    <div class="card-body" style="align-content: center">
                        <p class="card-text" style="align-content:center">
                            @Html.DisplayFor(modelItem => item.TenSP)
                        </p>
                        <p>
                            Giá hãng: <span class="old-price">
                                @{
                                    a = decimal.Parse(@Html.DisplayFor(Model => item.Gia).ToString());
                                    gh = string.Format("{0:0,000}", @a);
                                } @gh VNĐ &nbsp;
                            </span><br /><span class="new-price">
                                Giá bán: @{
                                    b = decimal.Parse(@Html.DisplayFor(Model => item.Gia).ToString());
                                    gb = string.Format("{0:0,000}", @a);
                                } @gb VNĐ &nbsp;
                            </span>
                        </p>
                        @*@Html.ActionLink("Xem ngay", "ChiTietSP", "Home", new { id = item.MaSP })*@
                        <a href="@Url.Action("ChiTietSP","Home", new { id = item.MaSP })" class="btn btn-primary" style="position:absolute;left:15px;bottom:15px">Xem Ngay</a>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="menu_2">
        <div class="new-title">
            <a href="#">
                <span style="color: #8a9696"></span><span style="color: #5353c5">
                    LOA KARAOKE <i class="fas fa-volume-off"></i>
                </span>
            </a>
        </div>
        <div class="row">
            @{
                Html.RenderAction("Loa", "Home");
            }
        </div>
    </div>
</div>


